# Database
DATABASE_URL="file:./dev.db"

# Application
NEXT_PUBLIC_MINIMUM_DONATION=0.01
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-secure-32-char-secret"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-specific-password"
SMTP_FROM="noreply@yourdomain.com"
SMTP_SECURE="false"

# Web3 Configuration
NEXT_PUBLIC_NETWORK_ID="1"
NEXT_PUBLIC_NETWORK_NAME="Ethereum Mainnet"
NEXT_PUBLIC_RPC_URL="your-rpc-url"

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_WINDOW=900

# Security
JWT_SECRET="generate-a-secure-32-char-secret"
PASSWORD_SALT_ROUNDS=12
SESSION_EXPIRY="7d"
COOKIE_SECRET="generate-a-secure-32-char-secret"

# Feature Flags
NEXT_PUBLIC_ENABLE_EMAIL_VERIFICATION="true"
NEXT_PUBLIC_ENABLE_PASSWORD_RESET="true"
NEXT_PUBLIC_MAINTENANCE_MODE="false"